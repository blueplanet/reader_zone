= render 'book_detail'

.notes.box
  = link_to "自分のみ", my_notes_book_path(@book.id)
  = render 'book_notes_info', count: @book.notes.count
  - @book.notes.each do |note|
    .row
      .span1= note.page
      .span2= note.user.name
      .span1
        - if @current_user && note.user == @current_user
          = link_to "編集", edit_book_note_path(@book, note), class: 'btn'
          / # = link_to "削除", destroy_book_note_path(@book)
      .span4= note.note